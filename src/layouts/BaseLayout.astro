---
import Header from '../components/Header.astro';
import Navigation from "../components/Navigation.astro";
import Footer from '../components/Footer.astro';
import '@fontsource-variable/roboto-mono';
import '@fontsource-variable/montserrat';

import '../styles/global.css';

const {pageTitle} = Astro.props;
---
<style>
  /* .content {
    display: inline-block;
    width: 400px;
  } */
</style>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo_s.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="py-6 px-4 sm:p-6 md:py-20 md:px-8">
    
    <div class="w-full md:max-w-4xl md:mx-auto flex flex-col md:flex-row">
        <nav class ="md:w-1/4 flex flex-row items-center md:items-baseline md:flex-col gap-4 text-sm font-normal">
          <Navigation />
        </nav>
      <div class="md:w-3/4 flex-row gap-5">
        <div class="px-2 md:px-0">
        <div class="h-10 flex mb-6">
          <h1 class="self-end text-xl font-extrabold tracking-wide">Benjamin Chan</h1>
        </div>
        <div class="content flex-row leading-8 text-base font-normal text-gray-200 font-sans antialiased">
          <slot />
        </div>
      </div>
        <footer class="pt-6 md:pt-32 text-sm flex justify-between items-center">
          <Footer />
        </footer>
      </div>
    </div>
  </body>
</html>
