---
import { getCollection, render} from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Lastmod from '../components/lastmod.astro';
import ProseMax from '../components/ProseMax.astro';


export async function getStaticPaths() {
  const pages = await getCollection('pages');
  return pages.map(post => ({
    params: { slug: post.id }, props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

---
<!-- pages -->
<BaseLayout frontmatter={post.data}>

  <div class="flex">
    <div class="basis-full max-w-none!">
      <ProseMax>
        <Content />
      </ProseMax>
    </div>
  </div>
<Lastmod class="my-10" date={post.data.lastmod} show={post.data.showdate} />
</BaseLayout>