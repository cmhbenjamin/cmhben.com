---
import { getCollection, render} from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Lastmod from '../../components/lastmod.astro';
import Prose from '../../components/Prose.astro';
import Sidebar from '../../components/Sidebar.astro';


export async function getStaticPaths() {
  const pages = await getCollection('works');
  return pages.map(work => ({
    params: { slug: work.id }, props: { work },
  }));
}

const { work } = Astro.props;
const { Content, headings} = await render(work);



---
<BaseLayout frontmatter={work.data}>
<h1>{work.data.title} </h1>



<div class="flex flex-row">
  <div class="basis-3/4">
    <Prose>
      <Content />
    </Prose>
  </div>
  <div class="basis-1/4">
    <div class="text-xs fixed m-5 p-2 bg-gray-800 rounded-md">
      <Sidebar {headings} />
    </div>
  </div>
  </div>
</div>


<!-- <Lastmod class="my-10" date={work.data.lastmod} show="True" /> -->
 <div>pre     next</div>
</Prose>
</BaseLayout>